@model List<TurnoWeb.UI.Models.TablaTurnosViewModel>

<div class="row">
    <h3>@ViewData["Titulo"] </h3>
    <div class=" span3 col-12 table-wrapper-scroll-y my-custom-scrollbar">
        <table id="dtVerticalScrollExample" class="table table-striped table-responsive-lg" cellspacing="0"
  width="100%">
            <!--table table-sm table-striped table-hover border-bottom table table-bordered mb-0-->
            <thead>
                <tr class="d-none d-lg-table-cell table-light">
                    <th hidden>
                        @Html.DisplayNameFor(model => model[0].hor_id)
                    </th>
                   
                    <th >
                        @Html.DisplayNameFor(model => model[0].hor_hora)
                    </th >
                    <th >
                        @Html.DisplayNameFor(model => model[0].hor_reserv)
                    </th>
                    <th >
                        @Html.DisplayNameFor(model => model[0].box_nombre)
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count > 0)
                {
                    foreach (var item in Model)
                    {
                <tr>
                    <td hidden>
                        @Html.DisplayFor(modelItem => item.hor_id)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.hor_hora)
                    </td>
                    <td>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <input type="radio" id="@(item.hor_id +"/"+ item.hor_hora + "/"+ item.box_nombre + "/" + item.hor_dia + "/" + ViewData["Titulo"])" name="groupRadio" aria-label="Radio button for following text input">
                                </div>
                            </div>
                           
                        </div>
                    </td>
                    <!--<td class=" th-md custom-control custom-checkbox text-center d-none d-md-table-cell">
        <input id="@item.hor_id" type="checkbox" asp-for="@item.hor_reserv" onClick="ActivarCasilla(this);">
    </td>-->
                    <td>
                        @Html.DisplayFor(modelItem => item.box_nombre)
                    </td>
                </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">
                            No hay turnos para esta fecha
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
